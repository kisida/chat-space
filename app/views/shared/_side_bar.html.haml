-# 本来の記述
.flash-box
.wrapper
  .chat-side
    .chat-side__header
      %p.side-header__user-name 
        =current_user.name
      %ul.user-menu
        %li.user-menu__new-group
          = link_to new_group_path do
            %i.fa.fa-edit
        %li.user-menu__edit-user
          = link_to edit_user_path(current_user) do
            %i.fa.fa-cog
    .groups
      =render "messages/groups"


